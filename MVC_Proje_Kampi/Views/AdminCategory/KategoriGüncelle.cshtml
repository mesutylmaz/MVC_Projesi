@model EntityLayer.Concreate.Category

@{
    ViewBag.Title = "KategoriGüncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Kategori Güncelleme Sayfası</h2>

@using(Html.BeginForm("KategoriGüncelle", "AdminCategory", FormMethod.Post))   //Category Controller'ının KategoriGüncelle'nin Post Action'ı için;
{ 
    <div class="form-group">
        @Html.Label("Kategori ID")
        @Html.TextBoxFor(x=>x.CategoryID, new {@class="form-control"})
        <br>
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(x=>x.CategoryName, new { @class = "form-control" })
        <br>
        @Html.Label("Kategori Açıklaması")
        @Html.TextAreaFor(x=>x.CategoryDescription, new { @class = "form-control" })
        <br><br />
        <button class="btn btn-success">Güncelle</button>
    </div>
}
