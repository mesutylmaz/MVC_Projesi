@model EntityLayer.Concreate.Category

@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Kategori Ekleme Sayfası</h1>
<br />

@using (Html.BeginForm("KategoriEkle", "AdminCategory", FormMethod.Post))   //Category Controller'ının KategoriEkle'nin Post Action'ı için;
{
    <div class="form-group">
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryName)
        <br /><br />
        @Html.Label("Kategori Açıklamasını Yazınız")
        @Html.TextAreaFor(x => x.CategoryDescription, new { @class = "form-control" })  @*class ile metin alanı daha geniş oluyor.*@
        @Html.ValidationMessageFor(x => x.CategoryDescription)
        <br /><br />
        <button class="btn btn-info">Kategoriyi Kaydet</button>
    </div>
}
